{
  "name": "nxman",
  "version": "1.0.0",
  "description": "An nginx site manager",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "docker": "npm run docker-build && npm run docker-run",
    "docker-run": "docker run --rm -it --name ngxman -p 3000:3000 -p 8080:8080 -p 8443:8443 -v ./conf:/conf -v ./certs:/certs -v ./logs:/logs ngxman",
    "docker-build": "docker build -f container/Dockerfile -t ngxman:latest ."
  },
  "author": "ad3m3r5",
  "license": "AGPL-3.0",
  "dependencies": {
    "dotenv": "^16.5.0",
    "express": "^5.1.0"
  }
}
